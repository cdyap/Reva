<main>
  <div class="fixed container ">
    <div class="row valign-wrapper header">
      <%=image_tag "logo.svg", id: 'logo'%>
      <h5 class="valign">Daily Counts</h5>
      <!-- <a href="">logout</a> -->
    </div>
  </div>  
  <div class="row data">
    <div class="row" id="all">
      <div class="col s10 offset-s1">
        <h6>Total counts as of: <%=@pens.first.date_of_headcount.strftime("%B %d, %Y")%></h6>
        <table class="responsive-table">
          <thead>
            <tr>
                <th data-field="building_number" class="right-align">Building #</th>
                <% (1..16).each do |i| %>
                  <td class="center-align"><%=i%></td>
                <%end%>
                <th>Total</th>
            </tr>
          </thead>

          <tbody>
            <td></td>
            <% (1..16).each do |building| %>
                <td class="center-align"><%=@building_headcount[building]%></td>
            <% end %>
            <td><%=@total_count%></td>
          </tbody>
        </table>
      </td>
    </div>
  </div>
  <div class="row buttons">
    <div class="col s6 offset-s3 center-align">
      <a class="waves-effect waves-light btn blue-grey darken-4" id="open">OPEN ALL</a>
      <a class="waves-effect waves-light btn blue-grey darken-4" id="close">CLOSE ALL</a>
    </div>
  </div>
  <div class="row">
    <p class="center-align">Click on a building name to expand.</p>
  </div>
  <div class="row">    
    <div class="col s8 offset-s2">
      <ul class="collapsible" data-collapsible="expandable">
        <% @buildings.each do |building| %>
          <li>
            <div class="collapsible-header blue-grey lighten-5">Building <%=building.building_number%>: <%=building.building_name%></div>
            <div class="collapsible-body">
              <div class="row">
                <div class="col s10 offset-s1 m6 offset-m3">
                  <table class="responsive-table centered">
                    <thead>
                      <th>Pen #</th>
                      <th>Headcount</th>
                    </thead>
                    <tbody>
                      <%Pen.where(building_number: building.building_number).each do |pen|%>
                        <tr>
                          <td><%=pen.pen_number%></td>
                          <td><%=pen.daily_headcount%></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>              
            </div>
          </li>
        <% end %>
      </ul>
    </div>          
  </div>
</div>
