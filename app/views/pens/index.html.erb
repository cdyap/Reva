<main>
  <div class="fixed container">
      <%=image_tag "logo.svg", id: 'logo'%>
      <a href="">logo</a>
    <!-- Tabs of dashboard -->  
      <div class="row">
        <div class="col s10 offset-1">
          <div class="indicator deep-orange darken-2" style="z-index:1">
            <ul class="tabs deep-orange-text text-darken-2">
              <li class="tab grey lighten-4"><a href="#all">All Daily Counts</a></li>
              <li class="tab  grey lighten-4"><a href="#add">Add Daily Count</a></li>
            </ul>
          </div>
      </div>
      </div>
  </div>
  <div class="row data">
    <div class="row" id="all">
      <div class="col s8 offset-s2">
        <table class="striped" style="width:100%">
          <thead>
            <tr>
                <th data-field="building_number">Building Number</th>
                <th data-field="building_name">Building Name</th>
                <th data-field="pen_number">Pen Number</th>
                <th data-field="daily_headcount">Daily Count</th>
                <th data-field="date_of_headcount">Date of Headcount</th>

            </tr>
          </thead>

          <tbody>

          </tbody>
        </table>
      </td>
    </div>
  </div>
</div>
  <div class="row" id="add">
      <div id="add" class="col s10 offset-s1">
       <div class="container">
        <div class="col s12"> 
            <%= simple_form_for @pen, html: { class: "input-form", id: "add-pen-form"} do |f|%>
            <div class="row">
                  <div class="input-field col s6">
                    <select id="buildings">
                        <option value="0" selected>0</option>
                        <option value="1">Building 1: Fattener</option>
                        <option value="2">Building 2: Grower</option>
                        <option value="3">Building 3: Grower</option>
                        <option value="4">Building 4: Grower</option>
                        <option value="5">Building 5: Grower</option>
                        <option value="6">Building 6: Grower</option>
                        <option value="7">Building 7: Grower</option>
                        <option value="8">Building 8: Gestating</option>
                        <option value="9">Building 9: Gestating</option>
                        <option value="10">Building 10: Gestating</option>
                        <option value="11">Building 11: Gestating</option>
                        <option value="12">Building 12: Starter</option>
                        <option value="13">Building 13: Pre-Starter</option>
                        <option value="14">Building 14: Farrowing</option>
                        <option value="15">Building 15: Farrowing</option>
                        <option value="15">Building 16: Farrowing</option>
                   </select>
                <label>Building Number and Name</label>
              </div>
            </div>
            <div class="row">
                  <div class="col s6">
                     <%= f.input :date_of_headcount,  as: :string, input_html: {type: :date},label: "Date Recorded:" %>
                  </div>
            </div>
            <div class="row center-align">
              <a class="waves-effect waves-light btn center-align blue-grey darken-4" id="add-pens">Add Pen Fields</a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</main>