<main>
  <div class="fixed container ">
    <div class="row valign-wrapper header">
      <%=image_tag "logo.svg", id: 'logo'%>
      <h5 class="valign">Daily Litter Records</h5>
      <!-- <a href="">logout</a> -->
    </div>
  </div>  
  <!-- DATA -->
  <div class="row data">
    <div id="all" class="col s12">

      <div class="container">
          <div class="center-align row">
            <%= link_to "ADD NEW LITTER", new_litter_path, class: "btn deep-orange darken-2 center-align", method: :get %>
          </div>
          <table class="striped">
            <thead>
              <tr>
                  <th data-field="pig_id">Dam's ID</th>
                  <th data-field="sex">Parity #</th>
                  <th data-field="bweight">Sire's ID</th>
                  <th data-field="bweight">Litter Size at Birth</th>
                  <th data-field="wweight">Actual Date of Farrowing</th>
                  <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if @litters.size == 0 %>
                <td colspan="7"><p class="center-align">No litters yet! Add a new litter above.</p></td>
              <% else %>
                <% @litters.each do |litter| %>
                  <tr>
                    <%# dam_earnotch = Pig.where(pig_id: litter.dam_id).first.ear_notch_number %>
                    <%# sire_earnotch = Pig.where(pig_id: litter.sire_id).first.ear_notch_number %>
                    <% dam_earnotch = Pig.where(pig_id: 12).first.ear_notch_number %>
                    <% sire_earnotch = Pig.where(pig_id: 12).first.ear_notch_number %>
                    <td><%=dam_earnotch.to_s[2..-1]%></td>
                    <td><%=litter.parity_number%></td>
                    <td><%=litter.sire_id%></td>
                    <td><%=litter.litter_size_at_birth%></td>
                    <td><%=litter.actual_date_of_farrowing.strftime("%B %d, %Y") %></td>
                    <td><%=link_to "Edit", edit_litter_path(litter.id), method: :get, target: :new %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>

  <!-- ADD -->
    <div id="add" class="col s10 offset-s1">
       <div class="container">
        <div class="col s12">       
        <%= simple_form_for @litter, html: { class: "input-form", id: "add-litter-form"} do |f|%>
          <div class="row">
            <h6>Parents' information:</h6>
            <div class="row">
              <div class="col s8">
                <%= f.input :dam_id, label: "Dam's ear notch number:" %>
              </div>
              <div class="col s4">
                <%= f.input :parity_number, as: :select, collection: 1...10,label: "Parity number (P#):" %>
              </div>
            </div>
            <div class="row">
              <div class="col s8">
                <%= f.input :sire_id, label: "Sire's ear notch number:" %>
              </div>
            </div>
          </div>
          
          
          <div class="row">
            <h6>Relevant dates:</h6>
            <div class="row">
              <div class="col s7">
                <%= f.input :date_bred, as: :string, input_html: {type: :date} %>
              </div>   
            </div>
            <div class="row">
              <div class="col s7">
                <%= f.input :due_to_farrow, as: :string, input_html: {type: :date} %>
              </div>
            </div>
            <div class="row">
              <div class="col s7">
               <%= f.input :actual_date_of_farrowing, as: :string, input_html: {type: :date}%>
              </div>
            </div>
          </div>
          <div class="row">
            <h6>Birth information:</h6>
            <div class="row">
              <div class="col s12">

              </div>
            </div>
            <div class="row">
              <div class="col s6">
                <%= f.input :mummified_piglets %>
              </div>
            </div>
            <div class="row">
              <div class="col s6">
                <%= f.input :stillborn_piglets %>
              </div>
            </div>
            <div class="row">
              <div class="col s6">
                <%= f.input :litter_size_at_birth %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <select id="male-piglets">
                  <option value="0" selected>0</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
                  <option value="11">11</option>
                  <option value="12">12</option>
                  <option value="13">13</option>
                  <option value="14">14</option>
                  <option value="15">15</option>
                </select>
                <label>How many alive male piglets?</label>
              </div>
              <div class="input-field col s6">
                <select id="female-piglets">
                  <option value="0" selected>0</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
                  <option value="11">11</option>
                  <option value="12">12</option>
                  <option value="13">13</option>
                  <option value="14">14</option>
                  <option value="15">15</option>
                </select>
                <label>How many alive female piglets?</label>
              </div>
            </div>
            <div class="row center-align">
              <a class="waves-effect waves-light btn center-align blue-grey darken-4" id="add-piglets">Add Piglet Fields</a>
            </div>
          </div>
          <div id="pigs" class="row">
          <h6>Piglets:</h6>
            <%= f.simple_fields_for :pigs, html: {id: "add-pigs-form"} do |p| %>
            <% end%>
            <div id="links">
              <%= link_to_add_association 'add pig', f, :pigs, html_options: {"data-association-insertion-method" => :after, "render_options" => :simple_fields_for}, id: 'add-pig', hidden: true%>

            </div>
          </div>
          <div class="center-align row">
            <%= f.button :submit, label: 'CREATE NEW LITTER', disabled: true, class: 'center-align', id: 'submit-litter' %>
          </div>
        <% end %>
        
        </div>       

      </div>
    </div>
    <div id="search" class="col s12">
    </div>
  </div>
</main>
