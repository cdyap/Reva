<main>
  <div class="fixed container ">
      <div class="row valign-wrapper">
        <%=image_tag "logo.svg", id: 'logo'%>
        <h5 class="valign">Daily Litter Records</h5>
        <!-- <a href="">logout</a> -->
      </div>
  </div>  
  <!-- DATA -->
  <div class="row data">
    <div id="all" class="col s12">
      <div class="container" style="width:100%">
        <div class="col s8 offset-s2">
          <!-- Modal Trigger -->
          <div class="center-align row"><!-- 
            <a class="modal-trigger waves-effect waves-light btn deep-orange darken-2 center-align" href="#litterform">ADD NEW LITTER</a> -->
            <%= link_to "ADD NEW LITTER", new_litter_path, class: "btn deep-orange darken-2 center-align", method: :get %>
          </div>
          <table class="striped">
            <thead>
              <tr>
                  <th data-field="pig_id">Dam's ID</th>
                  <th data-field="sex">Parity #</th>
                  <th data-field="bweight">Sire's ID</th>
                  <th data-field="bweight">Litter Size at Birth</th>
                  <th data-field="wweight">Actual Date of Farrowing</th>
                  <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @litters.each do |litter| %>
                <tr>
                  <%# dam_earnotch = Pig.where(pig_id: litter.dam_id).first.ear_notch_number %>
                  <%# sire_earnotch = Pig.where(pig_id: litter.sire_id).first.ear_notch_number %>
                  <% dam_earnotch = Pig.where(pig_id: 12).first.ear_notch_number %>
                  <% sire_earnotch = Pig.where(pig_id: 12).first.ear_notch_number %>
                  <td><%=dam_earnotch.to_s[2..-1]%></td>
                  <td><%=litter.parity_number%></td>
                  <td><%=litter.sire_id%></td>
                  <td><%=litter.litter_size_at_birth%></td>
                  <td><%=litter.actual_date_of_farrowing.strftime("%B %d, %Y") %></td>
                  <td><%=link_to "Edit", edit_litter_path(litter.id), method: :get, target: :new %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
