<main>
  <div class="fixed container header">
    <div class="row valign-wrapper">
      <%=image_tag "logo.svg", id: 'logo'%>
      <h5 class="valign">Removal Records</h5>
      <%= link_to "ADD NEW REMOVAL RECORD", new_cause_of_removal_path, class: "btn deep-orange darken-2 center-align", method: :get %>
      <!-- <a href="">logout</a> -->
    </div>
  </div> 
  <div class="row data">

    <div id="data" class="col s8 offset-s2">
      <div class="container" style="width:100%">
        <div class="col s12">
        <table class="striped fixed-table" style="width:100%">
          <thead>
            <tr>
                <th data-field="date">Date</th>
                <th data-field="pig_id" class="right-align">Ear Notch Number</th>
                <th data-field="pig_id">Cause of Removal</th>
                <th data-field="sex">Sex</th>
                <th data-field="building_id" class="right-align">Weight on Removal (kg)</th>
                <th class="left-align">Remarks</th>
            </tr>
          </thead>

          <tbody>
            <% @cause_of_removals.order('date_of_removal DESC').each do |record| %>
              <tr>
                <td><%=record.date_of_removal.strftime('%B %d, %Y')%></td>
                <td class="right-align"><%=record.pig.ear_notch_number.to_s[2..-1]%></td>
                <td><%=record.sale ? "Sale" : "Death"%></td>
                <td><%=record.pig.sex%></td>
                <td class="right-align"><%=record.weight_on_removal%></td>
                <td><%=record.remarks%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <table id="header-fixed"></table>
        </div>
      </div>
    </div>
  </div>
</main>